<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="security.authentication.provider.pbkdf2.class">Dayspring\PBKDF2Bundle\Security\Authentication\PBKDF2Provider</parameter>
    </parameters>
    
    <services>
		<prototype namespace="Dayspring\PBKDF2Bundle\Command\" resource="../../Command/*" autowire="true" autoconfigure="true" />
		<prototype namespace="Dayspring\PBKDF2Bundle\Controller\" resource="../../Controller/*" autowire="true" autoconfigure="true" />
		<prototype namespace="Dayspring\PBKDF2Bundle\Services\" resource="../../Services/*" autowire="true" autoconfigure="true" />

		<service
			id="security.authentication.provider.pbkdf2"
			class="%security.authentication.provider.pbkdf2.class%"
			abstract="true"
			public="false"
		>
            <argument /> <!-- User Provider -->
            <argument type="service" id="security.user_checker" />
            <argument /> <!-- Provider-shared Key -->
            <argument type="service" id="logger" />
            <argument>%security.authentication.hide_user_not_found%</argument>
            <argument type="service" id="password" />
        </service>

		<service
			id="validator.pbkdf2.weak_password"
			class="Dayspring\PBKDF2Bundle\Validator\Constraints\WeakPasswordValidator"
		>
			<argument type="service" id="pbkdf2.weak_password" />
			<tag name="validator.constraint_validator" alias="weak_password" />
		</service>

		<service
			id="pbkdf2.weak_password"
			class="Dayspring\PBKDF2Bundle\Services\WeakPasswordService"
			autowire="true"
			autoconfigure="true"
		>
		</service>

		<service
			id="password"
			class="Dayspring\PBKDF2Bundle\Services\PasswordService"
			autowire="true"
			autoconfigure="true"
		>
			<argument>sha1</argument>
			<argument>true</argument>
			<argument type="service" id="logger" />
			<argument>%dayspring_pbkdf2.md5_before_pbkdf2%</argument>
			<tag name="monolog.logger" channel="eeba" />
		</service>
	</services>
    
</container>
